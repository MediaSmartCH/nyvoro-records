# App runtime
NODE_ENV=development
PORT=4000
API_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:4173
DATABASE_URL=apps/api/data/nyvoro.db
WEB_DIST_DIR=apps/web/dist
SERVE_WEB_DIST=false

# Turnstile anti-spam
TURNSTILE_SITE_KEY=1x00000000000000000000AA
TURNSTILE_SECRET_KEY=turnstile_secret_placeholder
TURNSTILE_VERIFY_URL=https://challenges.cloudflare.com/turnstile/v0/siteverify
TURNSTILE_BYPASS=true

# Rate limit
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=10

# SMTP (replace with your ProtonMail bridge values in production)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=placeholder_user
SMTP_PASS=placeholder_password
SMTP_FROM=no-reply@nyvoro-records.com
APPLICATION_RECIPIENT_EMAIL=demo@nyvoro-records.com

# Security
IP_HASH_SALT=change-this-in-production

# Frontend
VITE_API_BASE_URL=http://localhost:4000
VITE_TURNSTILE_SITE_KEY=1x00000000000000000000AA
VITE_CONTACT_EMAIL=contact@nyvoro-records.com
VITE_PRESS_EMAIL=press@nyvoro-records.com
VITE_DEMO_EMAIL=demo@nyvoro-records.com
VITE_APPLICATION_RECIPIENT_EMAIL=demo@nyvoro-records.com
