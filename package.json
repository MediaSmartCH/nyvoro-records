{
  "name": "nyvoro-records",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@10.6.1",
  "engines": {
    "node": ">=20.11.0"
  },
  "scripts": {
    "setup": "pnpm install",
    "update": "pnpm update -r",
    "dev": "concurrently -n api,web -c cyan,magenta \"pnpm --filter @nyvoro/api dev\" \"pnpm --filter @nyvoro/web dev\"",
    "start": "pnpm --filter @nyvoro/api start",
    "start:deploy": "npm install --prefix apps/api --omit=dev && node apps/api/dist/server.js",
    "build": "pnpm --filter @nyvoro/web build && pnpm --filter @nyvoro/api build",
    "build:deploy": "npm install --prefix apps/web --include=dev && npm install --prefix apps/api --include=dev && npm run --prefix apps/web build && npm run --prefix apps/api build",
    "clean": "pnpm -r --if-present clean && rimraf node_modules",
    "test": "pnpm -r --if-present test",
    "lint": "pnpm -r --if-present lint",
    "format": "prettier --write .",
    "typecheck": "pnpm -r --if-present typecheck",
    "env": "node scripts/check-env.mjs",
    "check-env": "node scripts/check-env.mjs",
    "vercel:link": "pnpm dlx vercel@latest link",
    "vercel:env:pull": "pnpm dlx vercel@latest env pull apps/web/.env.local --environment=development",
    "vercel:env:pull:preview": "pnpm dlx vercel@latest env pull apps/web/.env.preview.local --environment=preview",
    "vercel:env:pull:production": "pnpm dlx vercel@latest env pull apps/web/.env.production.local --environment=production",
    "vercel:deploy:preview": "pnpm dlx vercel@latest deploy",
    "vercel:deploy:production": "pnpm dlx vercel@latest deploy --prod",
    "vercel:pull:preview": "pnpm dlx vercel@latest pull --environment=preview",
    "vercel:pull:production": "pnpm dlx vercel@latest pull --environment=production"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/node": "^22.13.10",
    "concurrently": "^9.1.2",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild"
    ]
  }
}
